PORT=3000
NODE_ENV=development
RESTAURANT_ID=default
JWT_SECRET=your_jwt_secret_key_here
FRONTEND_URL=http://localhost:5173

# Database Configuration (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=restaurant_db
DATABASE_SSL=false
# Set DB_SYNC=true for development to auto-create tables, false for production
DB_SYNC=false

# JWT Configuration
JWT_EXPIRES_IN=7d

# Google OAuth2 Configuration (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Cloudinary Configuration (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# MoMo Payment Configuration (Optional)
MOMO_PARTNER_CODE=MOMO
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key
MOMO_REDIRECT_URL=http://localhost:3000/api/payment/momo/redirect
MOMO_IPN_URL=http://localhost:3000/api/payment/momo/ipn
MOMO_REQUEST_TYPE=captureWallet
MOMO_ORDER_INFO="pay with MoMo"
MOMO_AUTO_CAPTURE=true
MOMO_LANG=vi

# Ngrok base URL (Used for local development to receive IPN hooks)
NGROK_BASE_URL=https://your-ngrok-url.ngrok-free.app

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
# Use App Password for Gmail
SMTP_PASSWORD=your_app_password
EMAIL_FROM="Restaurant App <no-reply@example.com>"

# Email Verification & Reset Password
EMAIL_VERIFICATION_EXPIRES_IN=24
RESET_PASSWORD_EXPIRES_IN=15