PORT=3000
NODE_ENV=development
RESTAURANT_ID=default
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d
FRONTEND_URL=http://localhost:5173

# Database Configuration (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-password-here
DATABASE_NAME=restaurant_db
DATABASE_SSL=false
DB_SYNC=false

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
# Using Gmail SMTP example
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@restaurant.com

# Email Verification Configuration
EMAIL_VERIFICATION_EXPIRES_IN=24

MOMO_AUTO_CAPTURE=true
MOMO_LANG=vi

# Ngrok base URL (dùng khi chạy local để nhận IPN)
NGROK_BASE_URL=               # ví dụ: https://xxxx.ngrok-free.app
