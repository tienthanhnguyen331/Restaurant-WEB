# ============================================
# RENDER DEPLOYMENT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3000
NODE_ENV=development
RESTAURANT_ID=default

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# ============================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# ============================================
# Get these values from your Neon dashboard: https://neon.tech
DATABASE_HOST=ep-xxx-xxx.region.aws.neon.tech
DATABASE_PORT=5432
DATABASE_USERNAME=neondb_owner
DATABASE_PASSWORD=your-neon-password
DATABASE_NAME=neondb
DATABASE_SSL=true
# Set to true on first deploy to create tables, then set to false
DB_SYNC=false

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-key-change-this
JWT_EXPIRES_IN=7d

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# For Gmail: Use App Password (not regular password)
# https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
EMAIL_FROM=noreply@restaurant.com
EMAIL_VERIFICATION_EXPIRES_IN=24
RESET_PASSWORD_EXPIRES_IN=15

# ============================================
# CLOUDINARY (Image Uploads)
# ============================================
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# MOMO PAYMENT (Optional)
# ============================================
MOMO_PARTNER_CODE=
MOMO_ACCESS_KEY=
MOMO_SECRET_KEY=
MOMO_AUTO_CAPTURE=true
MOMO_LANG=vi

# Ngrok base URL (for local MoMo IPN testing)
NGROK_BASE_URL=

# ============================================
# GOOGLE OAUTH (Optional)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback